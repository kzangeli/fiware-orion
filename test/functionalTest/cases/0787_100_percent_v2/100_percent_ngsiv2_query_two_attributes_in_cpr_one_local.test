# VALGRIND_READY - to mark the test ready for valgrindTestSuite.sh

--NAME--
Two Attributes In CPr One Local

--SHELL-INIT--
dbInit CB
dbInit CP1
dbInit CP2
brokerStart CB
brokerStart CP1
brokerStart CP2

--SHELL--

#
# 01. Create E1/T1/A1 in CP1
# 02. Create E1/T1/A2 in CP1
# 03. Create E2/T1/A4 in CP2
# 04. Create E1/T1/A3 in CB
# 05. Register E1/T1/A1 in CB, provApp: CP1
# 06. Register E1/T1/A2 in CB, provApp: CP1
# 07. Register E2/T1/A4 in CB, provApp: CP2
# 08. Query E1/T1/A1+A2+A3+A4 (Find E1-A3 in CB, E1-A1+A2 in CP1)
# 09. Query E2/T1/A1+A2+A3+A4 (Find E2-A4 in CP2)
#


echo "01. Create E1/T1/A1 in CP1"
echo "=========================="
payload='{
  "type": "T1",
  "id":   "E1",
  "A1": {
    "type": "string",
    "value": "A1 in CP1"
  }
}'
orionCurl --url /v2/entities --payload "$payload" --port $CP1_PORT
echo
echo


echo "02. Create E1/T1/A2 in CP1"
echo "=========================="
payload='{
  "A2": {
    "type": "string",
    "value": "A2 in CP1"
  }
}'
orionCurl --url /v2/entities/E1/attrs --payload "$payload" -X POST --port $CP1_PORT
echo
echo


echo "03. Create E2/T1/A4 in CP2"
echo "=========================="
payload='{
  "type": "T1",
  "id":   "E2",
  "A4": {
    "type": "string",
    "value": "A4 in CP2"
  }
}'
orionCurl --url /v2/entities --payload "$payload" --port $CP2_PORT
echo
echo


echo "04. Create E1/T1/A3 in CB"
echo "========================="
payload='{
  "type": "T1",
  "id":   "E1",
  "A3": {
    "type": "string",
    "value": "A3 in CB"
  }
}'
orionCurl --url /v2/entities --payload "$payload"
echo
echo


echo "05. Register E1/T1/A1 in CB, provApp: CP1"
echo "========================================="
payload='{
  "dataProvided": {
    "entities": [
      {
        "type": "T1",
        "id": "E1"
      }
    ],
    "attrs": [ "A1" ]
  },
  "provider": {
    "http": {
      "url": "http://localhost:'${CP1_PORT}'/v2"
    },
    "legacyForwarding": false
  }
}'
orionCurl --url /v2/registrations --payload "$payload"
echo
echo


echo "06. Register E1/T1/A2 in CB, provApp: CP1"
echo "========================================="
payload='{
  "dataProvided": {
    "entities": [
      {
        "type": "T1",
        "id": "E1"
      }
    ],
    "attrs": [ "A2" ]
  },
  "provider": {
    "http": {
      "url": "http://localhost:'${CP1_PORT}'/v2"
    },
    "legacyForwarding": false
  }
}'
orionCurl --url /v2/registrations --payload "$payload"
echo
echo


echo "07. Register E2/T1/A4 in CB, provApp: CP2"
echo "========================================="
payload='{
  "dataProvided": {
    "entities": [
      {
        "type": "T1",
        "id": "E2"
      }
    ],
    "attrs": [ "A4" ]
  },
  "provider": {
    "http": {
      "url": "http://localhost:'${CP2_PORT}'/v2"
    },
    "legacyForwarding": false
  }
}'
orionCurl --url /v2/registrations --payload "$payload"
echo
echo


echo "08. Query E1/T1/A1+A2+A3+A4 (Find E1-A3 in CB, E1-A1+A2 in CP1)"
echo "==============================================================="
orionCurl --url '/v2/entities?id=E1&type=T1&attrs=A1,A2,A3,A4'
echo
echo


echo "09. Query E2/T1/A1+A2+A3+A4 (Find E2-A4 in CP2)"
echo "==============================================="
orionCurl --url '/v2/entities?id=E2&type=T1&attrs=A1,A2,A3,A4'
echo
echo


